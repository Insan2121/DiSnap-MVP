<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_235sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_18sdp"
    android:layout_marginRight="@dimen/_18sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:clickable="true"
    app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:id="@+id/img_history_disease"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            android:scaleType="centerCrop"
            android:clickable="true"
            />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/parentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_history_disease_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14ssp"
                    android:text="Title"/>

                <TextView
                    android:id="@+id/tv_history_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:text="10 Desember 2019"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_history_disease_latin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="@dimen/_11ssp"
                    android:textColor="@color/colorGreen"
                    android:text="Latin"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/btn_remove_history"
                    android:layout_alignParentStart="true"/>
                <Button
                    android:id="@+id/btn_remove_history"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_32sdp"
                    android:text="Remove"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="false"/>

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
